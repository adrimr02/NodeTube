<div class="container p-4">
    <div class="row">
        {{#each videos}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="/view/{{ id }}">
                        <img src="{{ img-path }}" alt="">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                    </a>
                    <a href="/channel/{{ creator }}">
                        <p class="m-2">{{ creator }}</p>
                    </a>
                    <p>{{timeago uploaded_at}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>